import java.util.HashMap;
import java.util.Map;

class ShoppingCart {
    private Map<Book, Integer> cartItems = new HashMap<>();

    public void addToCart(Book book, int quantity) {
        if (book.checkAvailability() && book.availableQuantity >= quantity) {
            cartItems.put(book, cartItems.getOrDefault(book, 0) + quantity);
            book.reduceQuantity(quantity);
        } else {
            System.out.println("Not enough stock for " + book.getTitle());
        }
    }

    public void viewCart() {
        if (cartItems.isEmpty()) {
            System.out.println("Your cart is empty.");
        } else {
            System.out.println("Items in your cart:");
            for (Map.Entry<Book, Integer> entry : cartItems.entrySet()) {
                Book book = entry.getKey();
                int quantity = entry.getValue();
                System.out.println(book.getDetails() + " | Quantity: " + quantity);
            }
        }
    }

    public double calculateTotal() {
        double total = 0;
        for (Map.Entry<Book, Integer> entry : cartItems.entrySet()) {
            total += entry.getKey().price * entry.getValue();
        }
        return total;
    }

    public void clearCart() {
        for (Map.Entry<Book, Integer> entry : cartItems.entrySet()) {
            Book book = entry.getKey();
            int quantity = entry.getValue();
            book.increaseQuantity(quantity);
        }
        cartItems.clear();
    }
}
